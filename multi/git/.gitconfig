[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
[alias]
	st = status
	ci = commit
	br = branch
	ff = merge --ff-only
	co-branch = checkout
    purify = checkout
    resolve = add
    diff-staged = diff --cached
    piecemeal = add --patch
    unstage = reset

    what = whatchanged
    who = shortlog -s --
    graph = log --graph --abbrev-commit --date=relative --pretty=format:'%Cred%h%Creset %C(yellow)%d%Creset %s %Cgreen(%cr)%Creset'
    histlog = log --pretty=format:\"%C(red)%h%C(reset) %C(blue)%an%C(reset), %C(green)%cr%Creset : %s\"
    changelog = log --abbrev-commit --pretty=short --stat

    # open a github url for the current git repo
    hub = !git remote -v | sed -e"'s#git[:@]\\([^:]*\\):#https://\\1/#;s#^.*\\s\\(.*\\)\\.git\\s.*#\\1#'" | uniq | xargs xdg-open
    #   uses 2 sed substitutions:  ^-- change git: urls to https:      ^-- pull out url and remove .git to get webpage

[merge]
	tool = meld
[diff]
	renames = copies
[core]
	excludesfile = /home/dbriscoe/.gitignore
[giggle]
	compact-mode = false
	main-window-maximized = true
	main-window-geometry = 0x0+0+0
	main-window-view = HistoryView
[branch]
	autosetupmerge = true
