main() {
  REMOTES="$@";
  if [ -z "$REMOTES" ]; then
    REMOTES=$(git remote);
  fi
  REMOTES=$(echo "$REMOTES" | xargs -n1 echo)
  current_local_branch=$(git rev-parse --abbrev-ref HEAD);
  echo "$REMOTES" | while read remote; do
    git remote show $remote -n \
    | awk '/merges with remote/{print $5" "$1}' \
    | while read line; do
      remote_branch=$(echo "$line"|cut -f1 -d" ");
      remote_br_ref="refs/remotes/$remote/$remote_branch";
      local_branch=$(echo "$line"|cut -f2 -d" ");
      local_br_ref="refs/heads/$local_branch";
      n_behind=$(( $(git rev-list --count $local_br_ref..$remote_br_ref 2>/dev/null) +0));
      n_ahead=$((  $(git rev-list --count $remote_br_ref..$local_br_ref 2>/dev/null) +0));
      if [ "$n_behind" -gt 0 ]; then
        if [ "$n_ahead" -gt 0 ]; then
          echo " branch $local_branch is $n_behind commit(s) behind and $n_ahead commit(s) ahead of $remote/$remote_branch. could not be fast-forwarded";
        elif [ "$local_branch" = "$current_local_branch" ]; then
          echo " branch $local_branch was $n_behind commit(s) behind of $remote/$remote_branch. fast-forward merge";
          git fetch $remote_br_ref
          git merge --quiet $remote_br_ref;
        else
          echo " branch $local_branch was $n_behind commit(s) behind of $remote/$remote_branch. reseting local branch to remote";
          git branch --list -f $local_branch --track $remote_br_ref >/dev/null;
        fi
      fi
    done
  done
}

main $@
